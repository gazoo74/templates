DPDEV="${1:-DP1}"
DPPOS="${2:-right}"
if xrandr | grep -q "$DPDEV disconnected"; then
	xrandr --output "LVDS1"  --auto --primary
	xrandr --output "$DPDEV" --off
else
	xrandr --output "$DPDEV" --auto "--$DPPOS-of" "LVDS1" --primary
fi
