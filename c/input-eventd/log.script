if [[ -e input-event-codes.bash ]]
then
	source input-event-codes.bash
	key="${KEYS[$1]}"
	if [[ $key ]]
	then
		shift
		set -- "$key" "$@"
	fi
fi

printf "%s: devname: '%s', code: %s, value: %u\n" "$(date +%c)" "$DEVNAME" "$1" "$2"
